{% extends 'admin.html.twig' %}

{% block title %}Listes des catégories{% endblock %}
{% block body %}
{% include 'admin/_modal.html.twig'%}
        <div class="card my-2">
            <div class="card-header">
                <i class="bi bi-table fs-5 me-1"></i>
                Listes des catégories
            </div>
            <div class="card-body">
                <Table class="table table-hover table-bordered" id="datatablesSimple">
                <a href="{{path('admin_category_add')}}" class="btn btn-sm btn-success mb-2"><i class="bi bi-plus-lg"></i> Nouveau catégorie</a>
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Nom</th>
                            <th>Image</th>
                            <th>Déscription</th>
                            <th class='text-center'>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{categorie.id}}</td>
                                    <td>{{categorie.nom}}</td> 
                                    <td> <img src="{{asset ("assets/images/"~categorie.image)}}" alt="{{categorie.nom}}" style="max-height:120px;max-width:60px;" class="img img-fluid"></td>
                                    <td>{{categorie.description}}</td>
                                    <td class='text-center'>
                                        <a href="{{path('admin_category_edit',{'id':categorie.id})}}" class="btn-sm m-2">
                                        <i class="bi bi-pencil-square fs-5 text-warning"></i></a>
                                        <a href="{{path('admin_category_delete',{'id':categorie.id})}}" class="btn-sm m-2">
                                        <i class="bi bi-trash-fill fs-5 text-danger"></i></a>
                                    </td>      
                                </tr>
                            {% endfor %}
                    </tbody>
                </Table>
            </div>  
        </div>
{% endblock %}