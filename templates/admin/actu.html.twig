{% extends 'admin.html.twig' %}
{% block title %}Listes des actus{% endblock %}
{% block body %}
{% include 'admin/_modal.html.twig'%}
        <div class="card my-2">
            <div class="card-header">
                <i class="bi bi-table fs-5 me-1"></i>
                Listes des actualités
            </div>
            <div class="card-body">
                <Table class="table table-hover table-bordered" id="datatablesSimple">
                <a href="{{path('admin_actu_add')}}" class="btn btn-sm btn-success mb-2"><i class="bi bi-plus-lg"></i> Ajouter une actualité</a>
                    <thead>
                        <tr>
                            <th>id</th>                          
                            <th>Nom</th>
                            <th>Image</th>
                            <th>Déscription</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th class='text-center'>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            {% for actu in actus %}
                                <tr>
                                    <td>{{actu.id}}</td>
                                    <td>{{actu.nom}}</td>
                                    <td> <img src="{{vich_uploader_asset(actu,'imageFile')}}" alt="{{actu.nom}}" style="max-height:120px;max-width:60px;" class="img img-fluid"></td>
                                    <td>{{actu.description}}</td>
                                    <td>{{actu.date | date('d/m/Y \\à H:i')}}</td>
                                    <td>{{actu.Type.Nom}}</td>
                                    <td class='text-center'>
                                        <a href="{{path('admin_actu_edit',{'id':actu.id})}}" class="btn-sm edit m-2">
                                        <i class="bi bi-pencil-square fs-5 text-warning"></i></a>
                                        <a href="{{path('admin_actu_delete',{'id':actu.id})}}" class="btn-sm btn-del m-2">
                                        <i class="bi bi-trash-fill fs-5 text-danger"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                    </tbody>
                </Table>
            </div>
        </div>
{% endblock %}